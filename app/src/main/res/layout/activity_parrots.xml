<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="10dp"
            tools:ignore="MissingConstraints">
            <TextView
                android:id="@+id/header_parrot"
                style="@style/HeaderTextStyle"
                android:text="Заголовок">
            </TextView>

            <ImageView
                android:id="@+id/image_parrot"
                android:layout_width="@dimen/size_parrot_width"
                android:layout_height="@dimen/size_parrot_height"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal">
            </ImageView>

            <TextView
                android:id="@+id/text_parrot"
                android:text="Главный текст"
                style="@style/HomeTextStyle">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp">
            </TextView>

            <Button
                android:id="@+id/setButton"
                android:layout_width="110dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:text="Выбрать">
            </Button>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>